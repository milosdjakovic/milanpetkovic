---
import type { PublicationData } from "../bin/types";

export interface Props {
  publication: PublicationData;
}

const { publication } = Astro.props;
---

<a
  href={publication.url}
  class="block mt-8 first:mt-0 group hover:shadow-bottom-fluo"
>
  <p class="text-lg max-w-2xl font-semibold group-hover:text-fluo-green">
    {publication.title}
  </p>

  <p class="underline text-fluo-green">{publication.source}</p>
</a>
