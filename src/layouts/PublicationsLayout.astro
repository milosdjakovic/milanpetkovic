---
interface Article {
  title: string;
  source: string;
  link: string;
}

export interface Props {
  title: string;
  articles: Article[];
}

const { title, articles } = Astro.props;
---

<h1 class="text-2xl">{title}</h1>

{
  articles.map((article) => (
    <a
      href={article.link}
      class="block  mt-8 first:mt-0 group hover:shadow-bottom-fluo"
    >
      <p class="text-lg max-w-xl font-semibold group-hover:text-fluo-green">
        {article.title}
      </p>

      <p class="underline">{article.source}</p>
    </a>
  ))
}
