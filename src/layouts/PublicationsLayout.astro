---
import type { Language, PublicationData } from "../bin/types";

import PublicationLink from "../components/PublicationLink.astro";

import i18nData from "../data/i18n_data.json";
import publicationsData from "../data/publications.json";

const publications: PublicationData[] = publicationsData;

export interface Props {
  language: Language;
}

const { language } = Astro.props;
---

<h1 class="text-2xl">{i18nData.publications.title[language]}</h1>

{
  publications.map((publication) => (
    <PublicationLink publication={publication} />
  ))
}
